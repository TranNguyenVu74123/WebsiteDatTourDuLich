@model WEBSAIGONGLISTEN.Models.Order

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Pay</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" />
    <style>
        body {
            background-image: url('https://th.bing.com/th/id/OIP.pC1bRiGhKgB7-wUTkgbULAHaEK?rs=1&pid=ImgDetMain');
            background-repeat: no-repeat;
            background-size: cover;
        }
    </style>
    <!-- Thêm thư viện Font Awesome -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" rel="stylesheet" />
</head>
<body>
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-6 form-container">
                <h2>Thanh toán Momo</h2>
                <form action="/ShoppingCart/CreatePaymentUrl" id="frmCreateOrder" method="POST">
                    <div class="form-group">
                        <label for="FullName">Tên khách hàng</label>
                        <input class="form-control" id="FullName" name="FullName" type="text" required />
                    </div>
                    <br />
                    <div class="form-group">
                        <label for="Amount">Số tiền</label>
                        <input class="form-control" id="Amount" name="Amount" type="text" value="@Model.TotalPrice" readonly />
                    </div>
                    <br />
                    <div class="form-group">
                        <label for="OrderInfo">Nội dung thanh toán</label>
                        <textarea class="form-control" cols="20" id="OrderInfo" name="OrderInfo" rows="2">Chúc bạn đi chơi zui zẻ</textarea>
                    </div>
                    <br />
                    <button type="submit" class="btn btn-primary">Thanh toán (Checkout)</button>
                </form>
            </div>
        </div>
    </div>
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>
