@page
@model LoginModel

@{
    ViewData["Title"] = "Đăng nhập";
}

<h1 class="text-center">@ViewData["Title"]</h1>
<div class="row justify-content-center">
    <div class="col-md-6">
        <section class="border p-4 rounded bg-light">
            <form id="account" method="post">
                <h2 class="text-center">Sử dụng tài khoản nội bộ</h2>
                <hr />
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Input.Email">Email</label>
                    <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="Nhập email của bạn" />
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Input.Password">Mật khẩu</label>
                    <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="Nhập mật khẩu của bạn" />
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div class="form-group form-check">
                    <label asp-for="Input.RememberMe" class="form-check-label">
                        <input asp-for="Input.RememberMe" class="form-check-input" />
                        Ghi nhớ đăng nhập
                    </label>
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-primary btn-block">Đăng nhập</button>
                </div>
                <div class="form-group text-center">
                    <p>
                        <a id="forgot-password" asp-page="./ForgotPassword">Quên mật khẩu?</a>
                    </p>
                    <p>
                        <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Đăng ký tài khoản mới</a>
                    </p>
                    <p>
                        <a id="resend-confirmation" asp-page="./ResendEmailConfirmation">Gửi lại email xác nhận</a>
                    </p>
                </div>
            </form>
            <hr />
            <div class="text-center">
                <h3>Hoặc đăng nhập bằng:</h3>
                <form id="external-account" asp-page="./ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl" method="post" class="mb-3">
                    <button type="submit" class="btn btn-danger btn-block mb-2" name="provider" value="Google" style="background-color: #ff3c00;">
                        <i class="fab fa-google"></i> Google
                    </button>
                    <button type="submit" class="btn btn-primary btn-block mb-2" name="provider" value="Facebook">
                        <i class="fab fa-facebook-f"></i> Facebook
                    </button>
                    <button type="submit" class="btn btn-dark btn-block" name="provider" value="GitHub" style="background-color: #333333;">
                        <i class="fab fa-github"></i> GitHub
                    </button>
                </form>
            </div>
        </section>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
