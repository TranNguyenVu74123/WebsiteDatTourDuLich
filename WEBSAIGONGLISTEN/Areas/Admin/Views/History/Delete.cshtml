@model WEBSAIGONGLISTEN.Models.Booking

@{
    ViewData["Title"] = "Delete Booking";
}

<h2>Delete Booking</h2>

<div>
    <h3>Are you sure you want to delete this booking?</h3>
    <div>
        <h4>Booking ID: @Model.Id</h4>
        <p>User: @Model.ApplicationUser?.UserName</p>
        <p>Product: @Model.Product?.Name</p>
        <p>Booking Date: @Model.BookingDate.ToString("yyyy-MM-dd HH:mm")</p>
        <p>Total Price: @Model.TotalPrice.ToString("C")</p>
    </div>

    <form asp-action="DeleteConfirmed" method="post">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>