                    @foreach (var OrderDetail in Model.OrderDetail)
                    {
                        <tr>
                            <td>@OrderDetail.Order.Id</td>
                            <td>@OrderDetail.ApplicationUsers.UserName</td>
                            <!-- Các cột thông tin khác -->
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
