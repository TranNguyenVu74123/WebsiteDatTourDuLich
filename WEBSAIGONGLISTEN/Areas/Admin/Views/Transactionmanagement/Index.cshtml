        <div>
            <h2>Thông tin hành khách trong tour</h2>
            <!-- Danh sách hành khách đang tham gia tour -->
            <!-- Ví dụ: -->
            <table class="table">
                <thead>
                    <tr>
                        <th scope="col">ID</th>
                        <th scope="col">Tên hành khách</th>
                        <!-- Các cột thông tin khác -->
                    </tr>
                </thead>
                <tbody>
                    <!-- Dữ liệu hành khách được lấy từ cơ sở dữ liệu -->
