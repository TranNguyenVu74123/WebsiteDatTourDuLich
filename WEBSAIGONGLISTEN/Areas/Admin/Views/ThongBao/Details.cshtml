@model WEBSAIGONGLISTEN.Models.ThongBao

<h2>Chi Tiết Thông Báo</h2>

<div>
    <dl class="row">
        <dt class="col-sm-2">ID</dt>
        <dd class="col-sm-10">@Model.Id</dd>

        <dt class="col-sm-2">Description</dt>
        <dd class="col-sm-10">@Model.Description</dd>

        <dt class="col-sm-2">User ID</dt>
        <dd class="col-sm-10">@Model.UserId</dd>
    </dl>
</div>

<a asp-action="Index" class="btn btn-secondary">Trở về danh sách</a>
<a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">Chỉnh sửa</a>
<a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger">Xóa</a>